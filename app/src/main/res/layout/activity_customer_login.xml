            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/registration_linear_layout_background"
            android:orientation="vertical">


            <TextView
                android:id="@+id/registration_text_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="By tapping create an account, I agree to"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/registration_text_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="HyKe's Terms and Conditions."
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="italic" />

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/profile_image_section"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_gravity="center">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profileImage"
        android:src="@drawable/hyke_icon"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/enterYourProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your profile Image"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"/>


</LinearLayout>


<LinearLayout
    android:id="@+id/email_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enterYourEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Enter your Email address"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bottom_drawer_maroon"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textColorHint="#cccccc" />

    <TextView
        android:id="@+id/weSendReceipts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="(We send your receipts here)"
        android:textStyle="normal" />

</LinearLayout>

<LinearLayout
    android:id="@+id/password_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enterYourPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Enter your Password"
        android:textSize="17sp"
        android:visibility="gone"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bottom_drawer_maroon"
        android:ems="10"
        android:hint="Password"
        android:visibility="gone"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textColorHint="#cccccc" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bottom_drawer_maroon"
        android:ems="10"
        android:visibility="gone"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textColorHint="#cccccc" />

</LinearLayout>

<LinearLayout
    android:id="@+id/phone_number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/whatsYourNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="What is your Phone Number?"
        android:visibility="gone"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bottom_drawer_maroon"
        android:visibility="gone"
        android:ems="10"
        android:hint="+260"
        android:inputType="phone"
        android:textColorHint="#cccccc"
        android:textSize="20sp"
        android:textStyle="normal" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/user_names"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/whatAreYourFullnames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are your full Names?"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/first_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/edittext_bottom_drawer_maroon"
            android:hint="First Name"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="2dp"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="normal"/>
        <EditText
            android:id="@+id/last_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_drawer_maroon"
            android:hint="Last Name"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>

<Button
    android:id="@+id/next"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="20dp"
    android:background="#9f0e1c"
    android:onClick="onClickRegNext"
    android:text="Next"
    android:textAllCaps="false"
    android:textColor="#fff" />
